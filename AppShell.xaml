<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiApp_IA_IOT.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiApp_IA_IOT"
    xmlns:views="clr-namespace:MauiApp_IA_IOT.Views"
    Title="MauiApp_IA_IOT">

    <TabBar>
        <Tab Title="Chat" Icon="chat.svg">
            <ShellContent ContentTemplate="{DataTemplate views:ChatPage}" />
        </Tab>
        <Tab Title="Modelo" Icon="settings.svg">
            <ShellContent ContentTemplate="{DataTemplate views:SettingsPage}" />
        </Tab>
    </TabBar>

</Shell>
